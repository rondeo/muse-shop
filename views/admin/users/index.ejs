<!DOCTYPE html>
<html lang="en">
<head>
    <head>
        <% include ../partials/head %>
    </head>
    <body>
        <% include ../partials/header %>
        <!-- /navbar -->
        <div class="wrapper">
            <div class="container">
                <div class="row">
                    <div class="span3">
                      <% include ../partials/sidebar %>
                    </div>
                    <!--/.span3-->
                    <div class="span9">                        
					    <div class="content">
                            
                                <div class="module">
                                        <div class="module-head">
                                            <h3>
                                                Users List</h3>
                                        </div>
                                        <div class="module-body table">
                                            <table cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped	 display"
                                                width="100%">
                                                <thead>
                                                    <tr>
                                                        <th>
                                                            ID
                                                        </th>
                                                        <th>
                                                            Nome
                                                        </th>
                                                        <th>
                                                            CPF
                                                        </th>
                                                        <th>
                                                            Email
                                                        </th>
                                                        <th>
                                                            #
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% data.map(item => { %>

                                                        <tr class="odd gradeX">
                                                            <td>
                                                                <%= item.id %>
                                                            </td>
                                                            <td>
                                                                <%= item.nome %>
                                                            </td>
                                                            <td>
                                                                <%= item.cpf %>
                                                            </td>
                                                            <td>
                                                                <%= item.email %>
                                                            </td>
                                                            <td>
                                                                <button  data-id="<%= item.id %>" class="delete_user btn btn-danger"> Excluir </button>
                                                                <button data-id="<%= item.id %>" class="btn btn-primary"> Editar </button>
                                                            </td>
                                                        </tr>
                                                    
                                               <% }) %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                    <!--/.module-->
                        </div><!--/.content-->
                    </div>
                    <!--/.span9-->
                </div>
            </div>
            <!--/.container-->
        </div>

        <% include ../partials/footer %>
        <script src="/src/admin/scripts/user_actions.js"></script>
    </body>
