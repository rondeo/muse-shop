<!DOCTYPE html>
<html lang="en">

<head>

    <head>
        <% include ../partials/head %>
    </head>

<body>
    <% include ../partials/header %>
    <!-- /navbar -->
    <div class="wrapper">
        <div class="container">
            <div class="row">
                <div class="span3">
                    <% include ../partials/sidebar %>
                </div>
                <!--/.span3-->
                <div class="span9">
                    <div class="content">

                        <div class="module">
                            <div class="module-head">
                                <h3> Produtos</h3>
                            </div>
                            <div class="module-body table">
                                <table cellpadding="0" cellspacing="0" border="0"
                                    class="datatable-1 table table-bordered table-striped	 display" width="100%">
                                    <thead>
                                        <tr>
                                            <th>
                                                ID
                                            </th>
                                            <th>
                                                Item
                                            </th>
                                            <th>
                                                Fornecedor
                                            </th>
                                            <th>
                                                Edit
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        <% data.forEach((item) => { %>

                                        <tr class="gradeA">
                                            <td>
                                                <%= item.id %>
                                            </td>
                                            <td>
                                                <%= item.nome %>
                                            </td>
                                            <td class="center">
                                                <%= item.fornecedor %>
                                            </td>
                                            <td class="center">
                                                <a href="/admin/product/<%= item.id %>" data-action="edit"
                                                    class="btn btn-primary">
                                                    Edit
                                                </a>
                                                <button data-id="<%= item.id %>" data-action="delete"
                                                    class="btn btn-danger btn-prod-action">
                                                    Delete
                                                </button>
                                            </td>
                                        </tr>

                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!--/.module-->
                    </div>
                    <!--/.content-->
                </div>
                <!--/.span9-->
            </div>
        </div>
        <!--/.container-->
    </div>
    <!--/.wrapper-->
    <div class="popup">
        <div class="content">
            <div class="message"></div>
            <div class="buttons">
                <button class="btn btn-primary" onclick='cancelPopUp()'>Cancel</button>
            </div>
        </div>
    </div>
    <% include ../partials/footer %>

</body>